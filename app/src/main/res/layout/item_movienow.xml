<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="280sp"
        android:layout_height="200sp"
        app:cardBackgroundColor="@color/mainColor"
        app:cardCornerRadius="5sp"
        android:id="@+id/card1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10sp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/bigimg"
                android:scaleType="fitXY"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/card2"
                app:layout_constraintTop_toTopOf="@id/card2"
                android:text="Movie Title"
                android:paddingEnd="10sp"
                android:id="@+id/movie_title"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/card2"
                android:layout_marginStart="20sp"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="gf fdd;,df,bdb lmldmslmflsmfs;lfslfsm ld dl vdfllllll lffldmlfmfldmdl"
                android:id="@+id/description"
                android:maxLines="3"
                android:paddingEnd="10sp"
                android:textStyle="bold"
                android:textSize="8sp"
                android:gravity="start"
                android:textAlignment="textStart"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="@id/movie_title"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_title"
                />

            <androidx.cardview.widget.CardView
                android:layout_width="80sp"
                android:layout_height="100sp"
                app:cardBackgroundColor="@color/SecondColor"
                app:cardCornerRadius="5sp"
                android:id="@+id/card2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_margin="10sp"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/smallimg"
                        android:scaleType="fitXY"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>